.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.start_container {
  justify-content: flex-start;
}

.full_screen {
  width: 100%;
  height: 100vh;
}

.show{
  visibility: visible;
}

.hide {
  visibility: hidden;
}

.common_btn {
  width: 550rpx;
  height: 80rpx;
  font-family: "Microsoft YaHei";
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
  border-radius: 80rpx;
  background: linear-gradient(to right, #498fff, #6ac6ff);
  box-shadow: 0 10rpx 20rpx rgba(108, 202, 255, 0.5);
}